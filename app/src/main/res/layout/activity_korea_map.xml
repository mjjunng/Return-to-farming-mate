<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:gravity="center">

    <ImageView
        android:id="@+id/activityKrMapImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/korea_map"
        android:contentDescription="지도"
        app:layout_constraintBottom_toTopOf="@+id/activityKrMapBtn1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activityKrMapBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/Seoul"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/activityKrMapBtn2"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/activityKrMapBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SouthJeolla"
        app:layout_constraintBottom_toBottomOf="@+id/activityKrMapBtn1"
        app:layout_constraintEnd_toStartOf="@+id/activityKrMapBtn3"
        app:layout_constraintStart_toEndOf="@+id/activityKrMapBtn1" />

    <Button
        android:id="@+id/activityKrMapBtn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NorthChungcheong"
        app:layout_constraintStart_toEndOf="@+id/activityKrMapBtn2"
        app:layout_constraintBottom_toBottomOf="@+id/activityKrMapBtn2"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>