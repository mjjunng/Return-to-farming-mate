<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifyUserInfo"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="귀농과 귀촌 중 어느 것을 계획하십니까?"
            android:fontFamily="@font/notosanskr_bold"
            android:layout_marginTop="40dp"
            android:textSize="20dp"/>

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chbox_quinong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="귀농"
                android:fontFamily="@font/notosanskr_medium"
                android:textSize="16dp"/>

            <CheckBox
                android:id="@+id/chbox_quichon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="귀촌"
                android:fontFamily="@font/notosanskr_medium"
                android:textSize="16dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자연과 문화 중 어느 것을 선호하십니까?"
            android:fontFamily="@font/notosanskr_bold"
            android:layout_marginTop="14dp"
            android:textSize="20dp"/>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chbox_nature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자연"
                android:fontFamily="@font/notosanskr_medium"
                android:textSize="16dp"/>

            <CheckBox
                android:id="@+id/chbox_culture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="문화"
                android:fontFamily="@font/notosanskr_medium"
                android:textSize="16dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관심있는 키워드를 선택해주세요 (3개 이상)"
            android:fontFamily="@font/notosanskr_bold"
            android:layout_marginTop="14dp"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_done"
        android:layout_gravity="center"
        android:layout_marginTop="200dp">
    </Button>

</LinearLayout>