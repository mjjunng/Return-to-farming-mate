<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SixthPlanner"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sixth_step"
        android:layout_gravity="center"
        android:layout_marginTop="50.8dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_marginLeft="28dp"
        android:fontFamily="@font/notosanskr_bold"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="-3sp"
        android:text="농업 경영체 등록"
        android:textColor="#23cd87"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15.8dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_bold"
            android:textSize="15dp"
            android:textColor="#3a3a3a"
            android:lineSpacingExtra="2sp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:text="혜택"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/register2"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_bold"
            android:textSize="15dp"
            android:textColor="#3a3a3a"
            android:lineSpacingExtra="2sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="15dp"
            android:text="인터넷 신청"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8.2dp"
            >
            <ImageButton
                android:id="@+id/regist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/register3"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                />


        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_start_planner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:background="@android:color/transparent"
        android:src="@drawable/select_btn_next" />

</LinearLayout>