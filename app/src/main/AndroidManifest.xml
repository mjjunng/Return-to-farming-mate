    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="n">
        <activity
            android:name=".FinishPlanner"
            android:exported="true" />
        <activity
            android:name=".SecondPlanner"
            android:exported="true" />
        <activity
            android:name=".FirstPlanner"
            android:exported="true" />
        <activity
            android:name=".SixthPlanner"
            android:exported="true" />
        <activity
            android:name=".FifthPlanner"
            android:exported="true" />
        <activity
            android:name=".FourthPlanner"
            android:exported="true" />
        <activity
            android:name=".ThirdPlanner"
            android:exported="true" />
        <activity
            android:name=".ModifyPlan"
            android:exported="true" />
        <activity
            android:name=".ModifyUserInfo"
            android:exported="true" />
        <activity
            android:name=".RegionInfo"
            android:exported="true" />
        <activity
            android:name=".ChooseKeyword"
            android:exported="true" />
        <activity android:name=".SplashActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChoiceAge"
            android:exported="true" />
        <activity
            android:name=".SearchActivity"
            android:exported="true" />

        <activity
            android:name=".ResisterActivity"
            android:exported="true" />
        <activity
            android:name=".LoginActivity"
            android:exported="true" />

        <activity android:name=".MainActivity"
            android:windowSoftInputMode="adjustNothing"/>

        <activity android:name=".PlannerActivity"
            android:exported="true"/>

    </application>

</manifest>
